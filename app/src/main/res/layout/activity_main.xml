<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:background="#F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Playlist Manager"
            android:textColor="#2E3A59"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Card Container -->
        <LinearLayout
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#FFFFFF"
            android:clipToPadding="false"
            android:layout_gravity="center"
            android:backgroundTintMode="src_in"
            android:layout_marginHorizontal="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <EditText
                android:id="@+id/songTitleInput"
                android:hint="Song Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/artistNameInput"
                android:hint="Artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/ratingInput"
                android:hint="Rating (1 - 5)"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/commentInput"
                android:hint="Comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/feedbackText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/addToPlaylistButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#607D8B"
            android:text="Add to Playlist"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/viewPlaylistButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#4F6773"
            android:text="View Playlist"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#9E5550"
            android:text="Exit"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>